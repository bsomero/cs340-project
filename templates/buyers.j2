<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Strickland Realty</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}" type="text/css">
  </head>
  <body>
    <ul class="menu">
      <li class="menuItem"><a class="menuItemLink" href="index">Home</a></li>
      <li class="menuItem"><a class="menuItemLink" href="listings">Listings</a></li>
      <li class="menuItem"><a class="menuItemLink" href="realtors">Realtors</a></li>
      <li class="menuItemactive"><a class="menuItemLink" href="buyers">Buyers</a></li>
      <li class="menuItem"><a class="menuItemLink" href="sellers">Sellers</a></li>
      <li class="menuItem"><a class="menuItemLink" href="realtors-buyers">Realtors-Buyers</a></li>
    </ul>
    <div>
      <h1>Buyers</h1>
      <p>This page will allow you to update buyers.</p>
    </div>
    <div>
      <table>
        <caption>Buyers</caption>
        <thead>
          <tr>
            {% for key in Buyers[0].keys() %}
              <th>{{ key }}</th>
            {% endfor %}
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for Buyer in Buyers %}
            <tr>
              {% for key in Buyer.keys() %}
                <td>{{ Buyer[key] }}</td>
              {% endfor %}
              <form id="deletebuyer" action="/buyers" method="post">
                <td><button class="btn2" type="submit" name="delete_button" value="{{ Buyer.BuyerID }}">Delete Buyer</button></td>
              </form>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    <div>
      <h2>Add a New Buyer</h2>
      <form id="addbuyer" action="/buyers" method="post">
        <fieldset>
          <legend>New Buyer</legend>
          <p>
            <label>
              First Name:
              <input type="text" name="fname_input" size="30" maxlength="100" required>
            </label>
            <label>
              Last Name:
              <input type="text" name="lname_input" size="30" maxlength="100" required>
            </label>
          </p>
          <p>
            <label>
              Email:
              <input type="text" name="email_input" size="30" maxlength="100" required>
            </label>
            <label>
              Phone Number:
              <input type="text" name="phone_input" size="30" maxlength="100" required>
            </label>
          </p>
          <p>
            <button class="btn" type="submit" name="add_button" value="add_buyer">Add Buyer</button>
          </p>
        </fieldset>
      </form>
    </div>
    <div>
      <h2>Update a Buyer</h2>
      <form id="updatebuyer" action="/buyers" method="post">
        <fieldset>
          <legend>Update Buyer</legend>
          <p>
            <label>
              Buyer ID:
              <input type="number" name="id_update" size="5" maxlength="5" required>
            </label>
          </p>
          <p>
            <button class="btn" type="submit" name="update_button" value="find_buyer">Find Buyer</button>
          </p>
        </fieldset>
      </form>
    </div>
  </body>
</html>