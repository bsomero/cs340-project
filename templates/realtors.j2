<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Strickland Realty</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}" type="text/css">
  </head>
  <body>
    <ul class="menu">
      <li class="menuItem"><a class="menuItemLink" href="index">Home</a></li>
      <li class="menuItem"><a class="menuItemLink" href="listings">Listings</a></li>
      <li class="menuItemactive"><a class="menuItemLink" href="realtors">Realtors</a></li>
      <li class="menuItem"><a class="menuItemLink" href="buyers">Buyers</a></li>
      <li class="menuItem"><a class="menuItemLink" href="sellers">Sellers</a></li>
      <li class="menuItem"><a class="menuItemLink" href="realtors-buyers">Realtors-Buyers</a></li>
    </ul>
    <div>
      <h1>Realtors</h1>
      <p>This page will allow you to update realtors.</p>
    </div>
    <div>
      <table>
        <caption>Realtors</caption>
        <thead>
          <tr>
            {% for key in Realtors[0].keys() %}
              <th>{{ key }}</th>
            {% endfor %}
            <th class="delete-row"></th>
          </tr>
        </thead>
        <tbody>
          {% for Realtor in Realtors %}
            <tr>
              {% for key in Realtor.keys() %}
                <td>{{ Realtor[key] }}</td>
              {% endfor %}
              <form id="deleterealtor" action="/realtors" method="post">
                <td><button class="btn2 delete-btn" type="submit" name="delete_button" value="{{ Realtor.RealtorID }}">Delete Realtor</button></td>
              </form>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    <div>
      <h2>Add a New Realtor</h2>
      <form id="addrealtor" action="/realtors" method="post">
        <fieldset>
          <legend>New Realtor</legend>
          <p>
            <label>
              First Name:
              <input type="text" name="fname_input" size="30" maxlength="100" required>
            </label>
            <label>
              Last Name:
              <input type="text" name="lname_input" size="30" maxlength="100" required>
            </label>
          </p>
          <p>
            <label>
              Email:
              <input type="text" name="email_input" size="30" maxlength="100" required>
            </label>
            <label>
              Phone Number:
              <input type="text" name="phone_input" size="30" maxlength="100" required>
            </label>
          </p>
          <p>
            <button class="btn" type="submit" name="add_button" value="add_realtor">Add Realtor</button>
          </p>
        </fieldset>
      </form>
    </div>
    <div>
      <h2>Update a Realtor</h2>
      <form id="updaterealtor" action="/realtors" method="post">
        <fieldset>
          <legend>Update Realtor</legend>
          <p>
            <label>
              Realtor ID:
              <input type="number" name="id_update" size="5" maxlength="5" required>
            </label>
          </p>
          <p>
            <button class="btn" type="submit" name="update_button" value="find_realtor">Find Realtor</button>
          </p>
        </fieldset>
      </form>
    </div>
  </body>
</html>